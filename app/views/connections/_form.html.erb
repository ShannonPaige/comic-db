<%= form_tag(api_v1_connections_path, method: "get") do %>
  <%= label_tag(:first_character, "Choose first character:") %><br />
  <%= collection_select(:first_character, :character_id, Character.all.in_order(:name), :character_id, :name) %>
  <br /><br />
  <%= label_tag(:second_character, "Choose second character:") %><br />
  <%= collection_select(:second_character, :character_id, Character.all.in_order(:name), :character_id, :name) %>
  <br /><br />
  <button id="find-connection">submit</button>
<% end %>
