<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="row">
        <div class="col-md-12">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Choose Characters:</h3>
            </div>
            <div class="panel-body">
              <%= render partial: 'form' %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="panel panel-default">
            <div class="panel-body">
              This is where charater descriptions and pics will go
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <% if @connection %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Degrees of seperation:</h3>
          </div>
          <div class="panel-body">
            <%= @connection %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
